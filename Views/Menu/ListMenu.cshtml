@model IEnumerable<sushi.Models.Sushi>
@{
    ViewBag.Title = "ListMenu";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- Page Header Start -->
<div class="container-fluid page-header py-6 wow fadeIn" data-wow-delay="0.1s">
    <div class="container text-center pt-5 pb-3">
        <h1 class="display-4 text-white animated slideInDown mb-3">Menu</h1>
    </div>
</div>
<!-- Page Header End -->
<!-- Product Start -->
<div class="container-xxl bg-light my-6 py-6 pt-0" style="margin: 12rem auto;">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="text-primary text-uppercase mb-2">
                Sushi
            </p>
            <h1 class="display-6 mb-4">Khám phá các loại sushi của chúng tôi</h1>
        </div>
        <div class="row g-8">
            @foreach (var item in Model)
            {
                <div class=" col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item d-flex flex-column bg-white rounded overflow-hidden h-100">
                        <div class="text-center p-4">
                            <div class="d-inline-block border border-primary rounded-pill px-3 mb-3">@item.Gia VND</div>
                            <h3 class="mb-3">@item.TenSushi</h3>
                            <span>@item.MoTa</span>
                        </div>
                        <div class="position-relative mt-auto">
                            <img class="img-fluid" src="@item.Hinh" alt="">
                            <div class="product-overlay">
                                <a class="btn btn-lg-square btn-outline-light rounded-circle" href=""><i class="fa fa-shopping-cart text-primary"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
<!-- Product End -->