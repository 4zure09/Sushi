@model IEnumerable <sushi.Models.Sushi>
@{
    ViewBag.Title = "ListMenu";
    Layout = "~/Views/Shared/_Layoutmenu.cshtml";
}

<!-- Product Start -->
<div class="container-xxl bg-light my-6 py-6 pt-0" style="margin: 12rem 0;">
    <div class="container">
        <div class="text-center mx-auto mb-5 wow fadeInUp" data-wow-delay="0.1s" style="max-width: 500px;">
            <p class="text-primary text-uppercase mb-2">
                Sushi</p>
                <h1 class="display-6 mb-4">Khám phá các loại sushi của chúng tôi</h1>
        </div>
        @foreach (var item in Model)
        {
            <div class="row g-4">
                <div class="col-lg-4 col-md-6 wow fadeInUp" data-wow-delay="0.1s">
                    <div class="product-item d-flex flex-column bg-white rounded overflow-hidden h-100">
                        <div class="text-center p-4">
                            <div class="d-inline-block border border-primary rounded-pill px-3 mb-3">$11 - $99</div>
                            <h3 class="mb-3">@item.TenSushi</h3>
                            <span>@item.MoTa</span>
                        </div>
                        <div class="position-relative mt-auto">
                            <img class="img-fluid" src="@item.Hinh" alt="">
                            <div class="product-overlay">
                                <a class="btn btn-lg-square btn-outline-light rounded-circle" href=""><i class="fa fa-eye text-primary"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>
<!-- Product End -->