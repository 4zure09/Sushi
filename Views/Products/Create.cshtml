@model sushi.Models.Sushi

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style>
    .product_add {
        width: 100%;
        max-width: 800px;
        margin: 0 auto;
        padding: 20px;
        border-radius: 5px;
    }

        .product_add label {
            font-weight: bold;
        }

        .product_add .form-group {
            margin-bottom: 20px;
        }

            .product_add .form-group .col-md-2 {
                text-align: right;
            }

            .product_add .form-group .col-md-10 {
                margin-top: 5px;
            }

        .product_add .form-control {
            font-size: 18px;
            width: 95%;
            height: 40px;
            padding: 6px 12px;
            font-size: 18px;
            line-height: 1.42857143;
            color: #555;
            background-color: #fff;
            background-image: none;
            border: 1px solid #ccc;
            border-radius: 4px;
            -webkit-box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            box-shadow: inset 0 1px 1px rgba(0,0,0,0.075);
            -webkit-transition: border-color ease-in-out .15s,-webkit-box-shadow ease-in-out .15s;
            -o-transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
            transition: border-color ease-in-out .15s,box-shadow ease-in-out .15s;
        }

        .product_add .text-danger {
            color: #a94442;
        }

    .btn-success {
        margin-top: 6px;
        width: 80px;
        padding: 7px 7px;
        background: #287bff;
        text-decoration: none;
        color: var(--white);
        border-radius: 20px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 14px;
        font-weight: 600;
        box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
    }

    .btn-default {
        margin-top: 30px;
        width: 150px;
        padding: 10px 10px;
        background: #287bff;
        text-decoration: none;
        color: var(--white);
        border-radius: 20px;
        cursor: pointer;
        border: none;
        outline: none;
        font-size: 16px;
        font-weight: 600;
        box-shadow: 0 7px 25px rgba(0, 0, 0, 0.08);
    }

    #pictureUpload,
    #pictureUploadCT1,
    #pictureUploadCT2,
    #pictureUploadCT3,
    #pictureUploadCT4 {
        padding: 20px;
    }
</style>

<link href="~/Content/css/product-add-admin.css" rel="stylesheet" />

<div class="detail">
    <div class="admin-content">
        <div class="cardHeader">
            <h2>Thêm sản phẩm</h2>
        </div>
        <div class="product_add">
            <form action="" method="post">
                <div class="form-group">
                    <span>Mã sản phẩm</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ID_Sushi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.ID_Sushi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <span>Tên sản phẩm</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.TenSushi, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.TenSushi, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div class="form-group">
                    <span>Giá</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Gia, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Gia, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>Giới thiệu sản phẩm</span>
                    <div class="col-md-10">
                        @Html.TextAreaFor(model => model.MoTa, new { @class = "form-control" })
                        @Html.ValidationMessageFor(model => model.MoTa, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <span>Hình ảnh sản phẩm</span>
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.Hinh, new { htmlAttributes = new { @class = "form-control" } })
                        @Html.ValidationMessageFor(model => model.Hinh, "", new { @class = "text-danger" })
                        @using (Html.BeginForm("UploadFile", "Upload", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            <div>
                                @Html.TextBox("file", "", new { type = "file" }) <br />
                                <input type="submit" value="Upload" />
                                @ViewBag.Message
                            </div>
                        }
                        <img src="@Html.DisplayFor(model => model.Hinh)" width="500" id="pictureUpload">
                        <input type="file" name="fileUpload" accept="image/*" id="fileUpload" style="display:none;" />
                        <input type="button" id="btnUpload" value="Chọn" class="btn btn-success" />
                    </div>
                </div>
                @section upload
                {
                    <script>
                        $(function () {
                            $('#btnUpload').click(function () {
                                $('#fileUpload').trigger('click');
                            });
                        });
                        $('#fileUpload').change(function () {
                            if (window.FormData !== undefined) {
                                var fileUpload = $('#fileUpload').get(0);
                                var files = fileUpload.files;
                                var formData = new FormData();
                                formData.append('file', files[0]);

                                $.ajax(
                                    {
                                        type: 'POST',

                                        url: '/Products/ProcessUpload',
                                        contentType: false,
                                        processData: false,
                                        data: formData,
                                        success: function (urlImage) {
                                            $('#pictureUpload').attr('src', urlImage);
                                            $('#Hinh').val(urlImage);
                                        },
                                        error: function (err) {
                                            alert('Error ', err.statusText);
                                        }
                                    });
                            }
                        });
                    </script>
                }
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Thêm sản phẩm" class="btn btn-default" />
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

